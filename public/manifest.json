{
  "manifest_version": 2,

  "name": "Marksort",
  "description": "Chrome Extension, TypeScript, Visual Studio Code",
  "version": "1.0",

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "browser_action": {
    "default_icon": "icon.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["js/vendor.js", "js/content_script.js"]
    }
  ],

  "background": {
    "persistent": false,
    "scripts": ["js/vendor.js", "js/background.js"]
  },

  "permissions": ["storage", "bookmarks", "<all_urls>"]
}
